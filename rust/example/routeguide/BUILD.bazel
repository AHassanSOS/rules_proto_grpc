load("//rust:rust_grpc_library.bzl", "rust_grpc_library", "GRPC_DEPS")
load("@io_bazel_rules_rust//rust:rust.bzl", "rust_binary", "rust_library")

rust_grpc_library(
    name = "routeguide",
    deps = ["//example/proto:routeguide_proto"],
)

rust_binary(
    name = "client",
    srcs = ["client.rs", "log_util.rs", "util.rs"],
    data = ["//example/proto:routeguide_features"],
    visibility = ["//example/routeguide:__pkg__"],
    deps = [
        ":routeguide",
        "@build_stack_rules_proto//rust/raze:log",
        "@build_stack_rules_proto//rust/raze:rand",
        "@build_stack_rules_proto//rust/raze:serde_json",
        "@build_stack_rules_proto//rust/raze:slog",
        "@build_stack_rules_proto//rust/raze:slog_async",
        "@build_stack_rules_proto//rust/raze:slog_scope",
        "@build_stack_rules_proto//rust/raze:slog_stdlog",
        "@build_stack_rules_proto//rust/raze:slog_term",
    ] + GRPC_DEPS,
)

rust_binary(
    name = "server",
    srcs = ["server.rs", "log_util.rs", "util.rs"],
    data = ["//example/proto:routeguide_features"],
    visibility = ["//example/routeguide:__pkg__"],
    deps = [
        ":routeguide",
        "@build_stack_rules_proto//rust/raze:log",
        "@build_stack_rules_proto//rust/raze:serde_json",
        "@build_stack_rules_proto//rust/raze:slog",
        "@build_stack_rules_proto//rust/raze:slog_async",
        "@build_stack_rules_proto//rust/raze:slog_scope",
        "@build_stack_rules_proto//rust/raze:slog_stdlog",
        "@build_stack_rules_proto//rust/raze:slog_term",
    ] + GRPC_DEPS,
)
