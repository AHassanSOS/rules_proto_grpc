load("//:plugin.bzl", "proto_plugin")

proto_plugin(
    name = "python",
    outputs = ["{basename|python}_pb2.py"],
    exclusions = [
        "google/protobuf",
    ],
    visibility = ["//visibility:public"],
)

proto_plugin(
    name = "grpc_python",
    outputs = ["{basename|python}_pb2_grpc.py"],
    tool = "@com_github_grpc_grpc//:grpc_python_plugin",
    exclusions = [
        "google/protobuf",
    ],
    visibility = ["//visibility:public"],
)
