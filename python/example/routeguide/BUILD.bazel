load("//python:library.bzl", "py_grpc_library")

py_grpc_library(
    name = "routeguide",
    deps = ["//example/proto:routeguide_proto"],
)

py_binary(
    name = "server",
    srcs = [
        "server.py",
    ],
    deps = [
        ":routeguide",
        ":resources",
    ],
)

py_binary(
    name = "client",
    srcs = [
        "client.py",
    ],
    deps = [
        ":routeguide",
        ":resources",
    ],
)

py_library(
    name = "resources",
    srcs = [
        "resources.py",
    ],
    deps = [
        ":routeguide",
    ],
)
